
<div class="d-flex justify-content-center"> <%= image_tag("filmcestdeleau.png", {:style => "width:200px;"}) %> </div>

  <div class="d-flex flex-column justify-content-center align-items-center">

    <div class="list">
      <h1 class="list__title d-flex justify-content-center p-3 rounded">Mes Listes</h1>
    <% @lists.each do |list| %>
      <h2 class="d-flex justify-content-center p-2"><%= link_to list.name, list_path(list) %></h2>
    <% end %>
    <div class="list__new w-100 d-flex flex-row-reverse bg-success">
    <%= link_to "Nouvelle liste", new_list_path %>
    </div>
  </div>
</div>
